<body>
  <%= render "layouts/header" %>
  <%= yield %>
  <div class="topping-form-container">
    <h1>Edit Topping</h1>

    <% if @topping.errors.any? %>
        <div class="error-messages">
        <h2><%= pluralize(@topping.errors.count, "error") %> prevented this topping from being saved:</h2>
        <ul>
            <% @topping.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= form_with model: @topping, local: true do |form| %>
        <div class="form-group">
        <%= form.label :name, "Name" %>
        <%= form.text_field :name, class: "form-input", required: true %>
        </div>

        <div class="form-group">
        <%= form.label :emoji, "Emoji" %>
        <%= form.text_field :emoji, class: "form-input", placeholder: "🍕 (optional)" %>
        </div>

        <div class="form-actions">
        <%= form.submit "Update Topping", class: "submit-button" %>
        <%= link_to "Back to Toppings", toppings_path, class: "cancel-button" %>
        </div>
    <% end %>
   </div>

</body>